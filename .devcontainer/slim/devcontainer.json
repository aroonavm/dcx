{
    "name": "dcx Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "eamodio.gitlens",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "rust-lang.rust-analyzer",
                "[rust]": {
                    "editor.defaultFormatter": "rust-lang.rust-analyzer",
                    "editor.formatOnSave": true
                },
                "rust-analyzer.checkOnSave.command": "clippy"
            }
        }
    },
    "remoteUser": "dev",
    "mounts": [
        "source=${localEnv:HOME}/.claude,target=${localEnv:HOME}/.claude,type=bind",
        "source=${localEnv:HOME}/.gitconfig,target=${localEnv:HOME}/.gitconfig,type=bind,readonly"
    ],
    "containerEnv": {
        "RUST_BACKTRACE": "1",
        "CLAUDE_CONFIG_DIR": "${localEnv:HOME}/.claude",
        "GIT_CONFIG_GLOBAL": "${localEnv:HOME}/.gitconfig"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/workspace"
}
