{
    "name": "dcx Development (Full)",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "TZ": "${localEnv:TZ:America/Los_Angeles}",
            "GIT_DELTA_VERSION": "0.18.2",
            "ZSH_IN_DOCKER_VERSION": "1.2.0"
        }
    },
    "runArgs": [
        "--cap-add=NET_ADMIN",
        "--cap-add=NET_RAW",
        "--label", "dcx.network-mode=${localEnv:DCX_NETWORK_MODE:minimal}"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "rust-lang.rust-analyzer",
                "eamodio.gitlens",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "rust-lang.rust-analyzer",
                "[rust]": {
                    "editor.defaultFormatter": "rust-lang.rust-analyzer",
                    "editor.formatOnSave": true
                },
                "rust-analyzer.checkOnSave.command": "clippy",
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh"
                    }
                }
            }
        }
    },
    "remoteUser": "rust",
    "mounts": [
        "source=dcx-shellhistory-${devcontainerId},target=/commandhistory,type=volume",
        "source=${localEnv:HOME}/.claude,target=/home/rust/.claude,type=bind"
    ],
    "containerEnv": {
        "RUST_BACKTRACE": "1",
        "CLAUDE_CONFIG_DIR": "/home/rust/.claude",
        "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
        "DCX_NETWORK_MODE": "${localEnv:DCX_NETWORK_MODE:minimal}"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/workspace",
    "postStartCommand": "sudo --preserve-env=DCX_NETWORK_MODE /usr/local/bin/init-firewall.sh",
    "waitFor": "postStartCommand"
}
